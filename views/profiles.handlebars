    <div class="container">
        <div class="section"></div>
        <div class="row">
            
            <div class="center user-profile">
                <div id="avatar"><img src="/assets/images/profile-placeholder.jpg"></div>
                <div class="user-name"><span id="first_name">{{user.first_name}}</span><span> </span><span id="last_name">{{user.last_name}}</span></div>
                <div class="email"><span id="email">{{user.email}}</span></div>
            </div>
            
        </div>
        <div class="section"></div>
		<div class="row center">
			<a href="/add-wine" id="addWine" class="white-text teal lighten-1 btn">Add Wine</a>
		</div>

        <div class="section"></div>
        <div class="row">
            {{#if user.Wines}}
                {{#each user.Wines}}
                <div class="col l4 m6 reviewsClass">
                    <div class="card">
                        <div class="card-image"><img src="/assets/images/bottle-placeholder.png" alt="image placeholder">
                            <span class="card-title">{{this.title}}</span>
                        </div>
                        <div class="card-content">
                            <h5 class="wine-type">{{this.variety}}</h5>
                            <p>{{this.description}}</p>
                            <a id="update-{{this.id}}" class="white-text teal lighten-1 btn">Update</a>
                            <a id="remove-{{this.id}}" class="white-text teal lighten-1 btn">Remove</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
