    <div class="container">
        <div class="section"></div>
        <div class="row">Narrow your search results by either of the following categories</div>
        <div class="row">
            <div class="col m6">
                <select id="varietal-selection" class="browser-default">
                    <option value="" disabled selected>Choose a varietal</option>
                    <option value="Cabernet Sauvignon">Cabernet Sauvignon</option>
                    <option value="Champagne">Champagne/Sparkling Wine</option>
                    <option value="Chardonnay">Chardonnay</option>
                    <option value="Merlot">Merlot</option>
                    <option value="Petite Sirah">Petite Sirah</option>
                    <option value="Pinot Gris">Pinot Gris (Pinot Grigio)</option>
                    <option value="Pinot Noir">Pinot Noir</option>
                    <option value="Riesling">Riesling</option>
                    <option>Ros√©s (Blush Wines)</option>
                    <option>Sangiovese</option>
                    <option>Sauvignon Blanc</option>
                    <option>Syrah (Shiraz)</option>
                    <option>Viognier</option>
                    <option>Zinfandel</option>
                </select>
            </div>
            <div class="col m6">
                <select id="location-selection" class="browser-default">
                    <option value="" disabled selected>Choose a country</option>
                    <option>Argentina</option>
                    <option>Australia</option>
                    <option>Brazil</option>
                    <option>Chile</option>
                    <option>France</option>
                    <option>Germany</option>
                    <option>Italy</option>
                    <option>New Zealand</option>
                    <option>Portugal</option>
                    <option>South Africa</option>
                    <option>Spain</option>
                    <option>United States</option>
                </select>
            </div>
        </div>
        <div class="section"></div>
        <div class="row">
            {{#each wines}}
            <div class="col l4 m6 reviewsClass">
                <div class="card">
                    <div class="card-image"><img src="/assets/images/bottle-placeholder.png" alt="image placeholder">
                        <span class="card-title">{{this.title}}</span>
                    </div>
                    <div class="card-content">
                        <div class="collapsible" data-collapsible="accordion">
                            <h5 class="collapsible-header wine-type">{{this.variety}}</h5>
                            <div class="collapsible-body">
                                <p>{{this.description}}</p>
                                <a id="add-{{this.id}}" class="add-wine white-text teal lighten-1 btn">Add</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
